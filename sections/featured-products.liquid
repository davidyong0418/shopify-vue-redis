<!-- featured products -->
<section class="content carousel content" data-section-id="{{ section.id }}" data-section-type="featuredproducts-section">
  <div class="container">
    {%- assign name_collection = section.settings.collection -%}
    {%- if name_collection == blank -%}{%- assign name_collection = "trending-products" -%}{%- endif -%}
    {%- assign collection = collections[name_collection] -%}
    {% if collection.products.size == 0 %}
    <span style="display: flex; justify-content: center;">{{ section.settings.title }}.&#160;Add products. Select collection in this section using the sidebar.</span>
    {% else %}
    <div class="title-with-button ib-title-box">
      <div class="carousel-products__center pull-right"> <span class="btn-prev"></span> <span class="btn-next"></span> </div>
      <h2 class="text-center text-uppercase">{{ section.settings.title }}</h2>
    </div>
    <div class="carousel-products row" id="carousel1">
      {% for product in collection.products %}
      <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 col-xl-one-six">
      {% include "integrabeauty-product-grid-item" hoverzoom: "false" %}
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>
<script>
jQuery(document).ready(function() {

    productCarousel(jQuery('#carousel1'),6,4,4,2,1);

});
</script>
<!-- end featured products -->

{% schema %}
{
  "name": "Products Grid",
  "class": "index-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "BY DEFAULT. SHOW ALL PRODUCTS. SELECT YOUR COLLECTION."
    },
    {
      "type": "checkbox",
      "id": "center_title",
      "label": "Center Title",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "FEATURED PRODUCTS"
    },
    {
      "label": "Collection",
      "id": "collection",
      "type": "collection"
    },
    {
      "type": "select",
      "id": "products_in_row",
      "label": "Products In Row",
      "options": [
		{ "value": "6", "label": "2" },
        { "value": "4", "label": "3" },
        { "value": "3", "label": "4" },
        { "value": "2", "label": "6" }
      ],
      "default": "3",
	  "info": "For screen size > 1024"
    },
    {
      "type": "text",
      "id": "limit",
      "label": "Items Length. Integer",
      "default": "8"
    },
    {
      "type": "header",
      "content": "Image Block"
    },
    {
      "type": "checkbox",
      "id": "show_lookbook",
      "label": "Show Image Block",
      "default": true,
	  "info": "Work only in screen size > 1770"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Heading",
      "default": "Lookbook"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Optional"
    }
  ],
  "presets": [
    {
      "name": "Products Grid",
      "category": "Products",
      "settings": {
      }
    }
  ]
}
{% endschema %}