<style type="text/css">
  #manychat-button {
    right: 20px;
    bottom: 10px;
    position: fixed;
    cursor: pointer;
    z-index: 10000;
    text-decoration: none;
    user-select: none;
    transition: opacity 0.3s;
    -moz-transition: opacity 0.3s;
    -webkit-transition: opacity 0.3s;
    -o-transition: opacity 0.3s;
    -ms-transition: opacity 0.3s;
    font-family: helvetica, sans-serif;
  }
  #manychat-button span {
    padding: 16px 20px 14px;
    font-size: 16px;
    border-radius: 30px;
    font-weight: bold;
    background: #000;
    color: #FFF;
    display: block;
  }
  .manychat-popup { 
    position: fixed;
    width: 100%;
    height: 100%;
    top:0;
    bottom:0;
    left:0;
    right:0;
    z-index: 1000000;
  }
  .manychat-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: .75;
    background-color: #999;
    z-index:1;
    top:0;
    left:0;
  }
  .manychat-stage {
    display:table;
    position:absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .manychat-inner {
    display:table-cell;
    width: 100%;
    height: 100%;
    vertical-align: middle;
    text-align: center;
    padding: 10px;
  }
  .mcwidget-embed-wrapper {
    margin: 0 auto;
    display: table;
    border-radius: 20px;
    padding: 20px 0;
    background-color: #FFF;
    box-shadow: 0 0 20px rgba(0,0,0,.5);
    z-index: 10;
    position: relative;
    max-width:720px;
  }
  .mcwidget-embed {
    display:inline-block;
  }
  .manychat-close {
    display: block;
    width: 24px;
    height: 24px;
    color: #FFF;
    background-color: #000;
    border: 1px solid #FFF;
    line-height: 24px;
    position: absolute;
    top: -5px;
    right: -5px;
    border-radius: 12px;
    text-align: center;
    font-size: 13px;
    font-family: sans-serif;
    z-index: 20;
    cursor: pointer;
  }
  .mcwidget-embed-wrapper > .mcwidget-embed > div {
    padding: 25px 40px 15px!important;
  }
  .mcwidget-embed-wrapper > .mcwidget-embed > div > div + a {
    display: none;
  }
  .mcwidget-embed-wrapper > .mcwidget-embed > div > div > p + div {
    margin: 10px auto 0 auto !important;
    height: 38px !important;
    max-height: 38px !important;
    overflow: hidden !important;
  }
  .mcwidget-embed-wrapper > .mcwidget-embed > div > div > p + div > div {
    width:auto !important;
    display: block !important;
    text-align: center !important;
    margin: 0 auto !important;
  }
  @media (max-width:400px) {
    .mcwidget-embed-wrapper > .mcwidget-embed > div {
      padding: 0 10px !important;
    }
    .mcwidget-embed-wrapper > .mcwidget-embed > div p {
      font-size: 13px !important;
      line-height: 24px !important;
    }
  }
</style>
<a id="manychat-button"><span>$1,000 Halloween Giveaway</span></a>
<div class="manychat-popup" style="display:none">
  <div class="manychat-stage">
    <div class="manychat-inner">
      <div class="manychat-overlay">&nbsp;</div>
      <div class="mcwidget-embed-wrapper">
        <div id="manychat-widget" class="mcwidget-embed" data-widget-id="3300083"></div>
        <a class="manychat-close">X</a>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('#manychat-button').click(function(){
      $('.manychat-popup').fadeIn(400);
    });
  });
  $(document).ready(function(){
    $('.manychat-overlay,.manychat-close').click(function(){
      $('.manychat-popup').fadeOut(400);
    });
  });  
</script>